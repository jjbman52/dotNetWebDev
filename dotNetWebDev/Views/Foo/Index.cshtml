@{
    ViewBag.Title = "Bar";
}

<div class="container">
    <div class="jumbotron">
        <h1><i class="fas fa-h-square">E</i><i class="fas fa-grip-lines-vertical"></i><i class="fab fa-old-republic"></i></h1>


        <form role="form" method="post" action="~/Foo/Bar">
            <div class="form-group">
                <label for="gum">What is your favorite gum: </label>
                <input type="text" class="form-control" id="gum" name="gum">
            </div>
            <button type="submit" class="btn btn  -default">Submit</button>
        </form>
    </div>
</div>

@section scripts
{
    <script>
        $(function () {
            var words = ["bounce", "flash", "pulse", "shake", "swing", "tada", "wobble", "heartBeat"];

            var word = words[Math.floor(Math.random() * words.length)];

            $('h1').addClass('animated ' + word);
        });
    </script>
}