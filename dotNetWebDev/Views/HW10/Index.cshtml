@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="jumbotron">
        <h1><i class="fas fa-h-square">E</i><i class="fas fa-grip-lines-vertical"></i><i class="fab fa-old-republic"></i></h1>

    </div>
    <h2>Color Combinator</h2>

    <form role="form" method="post" action="~/HW10/colorCombinator">
        <div class="form-group">
            <label for="color1">Color 1:</label>
            <select class="form-control" id="color1" name="color1">
                <option value="red">Red</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
            </select>
            <label for="color2">Color 2:</label>
            <select class="form-control" id="color2" name="color2">
                <option value="red">Red</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
            </select>
        </div>
        <button type="submit" class="btn btn  -default">Submit</button>
    </form>
</div>

@section scripts
{
    <script>
        $(function () {
            var words = ["bounce", "flash", "pulse", "shake", "swing", "tada", "wobble", "heartBeat"];

            var word = words[Math.floor(Math.random() * words.length)];

            $('h1').addClass('animated ' + word);
        });
    </script>
}